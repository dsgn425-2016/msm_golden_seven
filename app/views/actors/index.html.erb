<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <div class="container">
      <div>
        <h3>Actors</h3>
      </div>

      <p><a href="/actors/new_form" class="btn btn-primary">Add a New Actor</a></p>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Dob</th>
            <th>Bio</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @actors.each do |actor| %>
            <tr>
              <td><img src="<%= actor.image_url %>" width="80"></td>
              <td><%= actor.name %></td>
              <td><%= actor.dob %></td>
              <td><%= truncate(actor.bio) %></td>
              <td>
                <a href="/actors/<%= actor.id %>" class="btn btn-primary">
                  <i class="fa fa-search-plus"></i>
                </a>
              </td>
              <td>
                <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-warning">
                  <i class="fa fa-edit"></i>
                </a>
              </td>
              <td>
                <a href="/delete_actor/<%= actor.id %>" class="btn btn-danger">
                  <i class="fa fa-trash-o"></i>
                </a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </body>
</html>
