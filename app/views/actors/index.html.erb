<h1>Actors</h1>

<a href="/actors/new_form">Add an Actor</a>

<table>
  <tr>
    <th>Image</th>
    <th>DOB</th>
    <th>Name</th>
    <th>Bio</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.dob %>
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <%= truncate(actor.bio) %>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="/actors/<%= actor.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_actor/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
