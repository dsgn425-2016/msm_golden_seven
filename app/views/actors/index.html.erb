<h1>Actors</h1>
<hr>

<a href="/new_form">ADD A NEW ACTOR </a>

<table>
  <thead>
    <tr>
      <th>
        Image
      </th>
      <th>
        Dob
      </th>
      <th>
        Name
      </th>
      <th>
        Bio
      </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @list_of_actors.each do |actor| %>
    <tr>
      <td>
        <img src="<%= actor.image_url %>" width="50">
      </td>
      <td>
        <%= actor.dob %>
      </td>
      <td>
        <%= actor.name %>
      </td>
      <td>
        <%= actor.bio %>
      </td>
      <td>
        <a href="/actors/<%= actor.id %>">Show</a>
      </td>
      <td>
        <a href="/actors/<%= actor.id %>/edit_form">Edit</a>
      </td>
      <td>
        <a href="/delete_actor/<%= actor.id %>">delete</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
