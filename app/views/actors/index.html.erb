<h1>Actors</h1>

<div>
  <a href="/new_actor_form"> <input type=button value="Create New Actor"></a>
</div>

<table>

  <tr>
    <th>Image</th>
    <th>DOB</th>
    <th>Name</th>
    <th>Bio</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

  <% @actors.each do |actor| %>
  <tr>
    <td><img src="<%= actor.image_url %>" width="80">
    </td>
    <td><%= actor.dob %></td>
    <td><%= actor.name %></td>
    <td><%= truncate(actor.bio) %></td>
    <td><a href="http://localhost:3000/actors/<%= actor.id %>">Details</a></td>
    <td><a href="http://localhost:3000/actors/<%= actor.id %>/edit_form">Edit</a></td>
    <td><a href="http://localhost:3000/delete_actor/<%= actor.id %>">Delete</a></td>

  </tr>
  <% end %>

</tbody>
</table>
