<p><a href="/actors/new_form" class="btn btn-primary">Add actor</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>DOB</th>
      <th>Bio</th>
    </tr>
  </thead>

  <tbody>
    <% @list_of_actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" width="80"></td>
        <td><%= actor.name %></td>
        <td><%= actor.dob %></td>
        <td><%= actor.bio %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/destroy/<%= actor.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
