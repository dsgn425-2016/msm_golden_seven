<div class="page-header">
  <h1>Actors</h1>
</div>

<p><a href="/actors/new_form">Add a New Actor</a></p>

<table class="">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Bio</th>
      <th>Dob</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src="<%= actor.image_url %>" width="80"></td>
        <td><%= actor.name %></td>
        <td><%= truncate(actor.bio) %></td>
        <td><%= actor.dob %></td>
        <td>
          <a href="/actors/<%= actor.id %>" class="">
            Details
          </a>
        </td>
        <td>
          <a href="/actors/<%= actor.id %>/edit_form" class="">
            Edit
          </a>
        </td>
        <td>
          <a href="/delete_actor/<%= actor.id %>" class="">
            Delete
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
