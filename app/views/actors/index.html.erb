<h1>Actors</h1>

<div class="">
  <a href="/actors/new_form">ADD A NEW ACTOR</a>
</div>

<div class="">
  <table>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Bio</th>
      <th>DOB</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @list_of_actors.each do |actor| %>
    <tr>
      <td>
        <img src="<%= actor.image_url %>" width="80">
      </td>
      <td>
        <%= actor.name %>
      </td>
      <td>
        <%= actor.bio %>
      </td>
      <td>
        <%= actor.dob %>
      </td>
      <td>
        <a href="/actors/<%= actor.id %>">Show</a>
      </td>
      <td>
        <a href="/actors/edit/<%= actor.id %>">Edit</a>
      </td>
      <td>
        <a href="/actors/delete_actor/<%= actor.id %>">Delete</a>
      </td>
    </tr>
    <% end %>
  </table>
</div>
