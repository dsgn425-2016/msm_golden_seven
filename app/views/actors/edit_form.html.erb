
<div class="page-header">
  <h1>Edit information for <%= @actor.name %></h1></div>

  <form action="http://localhost:3000/update_actor/<%= @actor.id %>" class="form-horizontal">
    <!-- Label and input for name -->
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">
        Name
      </label>
      <div class="col-sm-10">
        <input type="text" id="name" name="name" placeholder="name" class="form-control" value="<%= @actor.name %>">
      </div>
    </div>

    <!-- Label and input for bio -->
    <div class="form-group">
      <label for="bio" class="col-sm-2 control-label">
        Bio
      </label>
      <div class="col-sm-10">
        <input type="text" id="bio" name="bio" placeholder="bio" class="form-control" value="<%= @actor.bio %>">
      </div>
    </div>

    <!-- Label and input for dob -->
    <div class="form-group">
      <label for="DOB" class="col-sm-2 control-label">
        DOB
      </label>
      <div class="col-sm-10">
        <input type="text" id="dob" name="dob" placeholder="dob" class="form-control" value="<%= @actor.dob %>">
      </div>
    </div>

    <!-- Label and input for image_url -->
    <div class="form-group">
      <label for="image_url" class="col-sm-2 control-label">
        Image url
      </label>
      <div class="col-sm-10">
        <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @actor.image_url %>">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Update actor" class="btn btn-primary">
      </div>
    </div>
  </form>
