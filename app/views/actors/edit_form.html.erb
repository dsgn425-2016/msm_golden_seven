<div class="page-header">
  <h1>Edit Actor #<%= @actor.id %></h1>
</div>

<form action="/update_actor/<%= @actor.id %>" class="">

  <div class="">
    <label for="name" class="">
      Name
    </label>
    <div class="">
      <input type="text" id="name" name="name" placeholder="Name" class="" value="<%= @actor.name %>">
    </div>
  </div>

  <div class="">
    <label for="bio" class="">
      Bio
    </label>
    <div class="">
      <textarea id="bio" name="bio" placeholder="Bio" class="" rows="3"><%= @actor.bio %></textarea>
    </div>
  </div>

  <div class="">
    <label for="dob" class="">
      Dob
    </label>
    <div class="">
      <input type="text" id="dob" name="dob" placeholder="Dob" class="" value="<%= @actor.dob %>">
    </div>
  </div>

  <div class="">
    <label for="image_url" class="">
      Image url
    </label>
    <div class="">
      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="" value="<%= @actor.image_url %>">
    </div>
  </div>

  <div class="">
    <div class="">
      <input type="submit" value="Update Actor" class="">
    </div>
  </div>
</form>
