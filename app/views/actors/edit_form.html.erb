<h1>Edit Actor #<%= @actor.id %></h1>

<form action="/update_actor/<%= @actor.id %>">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" class="form-control" value="<%= @actor.name %>">
  </div>
  <div>
    <label for="dob">DOB:</label>
    <input type="text" id="dob" name="dob" class="form-control" value="<%= @actor.dob %>">
  </div>
  <div>
    <label for="bio">Bio:</label>
    <input type="text" id="bio" name="bio" class="form-control" value="<%= @actor.bio %>">
  </div>
  <div>
    <label for="image_url">Image URL:</label>
    <input type="text" id="image_url" name="image_url" class="form-control" value="<%= @actor.image_url %>">
  </div>
  <div>
    <button>Update Actor</button>
  </div>
</form>
