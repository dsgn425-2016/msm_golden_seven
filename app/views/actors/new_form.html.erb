<div class="page-header">
  <h1>Add a new actor to the database</h1></div>

  <form action="http://localhost:3000/create_actor" class="form-horizontal">
    <!-- Label and input for title -->
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">
        Name
      </label>
      <div class="col-sm-10">
        <input type="text" id="name" name="name" placeholder="name" class="form-control">
      </div>
    </div>

    <!-- Label and input for Bio -->
    <div class="form-group">
      <label for="Bio" class="col-sm-2 control-label">
        Bio
      </label>
      <div class="col-sm-10">
        <input type="text" id="bio" name="bio" placeholder="bio" class="form-control">
      </div>
    </div>

    <!-- Label and input for DOB -->
    <div class="form-group">
      <label for="DOB" class="col-sm-2 control-label">
        DOB
      </label>
      <div class="col-sm-10">
        <input type="text" id="dob" name="dob" placeholder="dob" class="form-control">
      </div>
    </div>

    <!-- Label and input for image_url -->
    <div class="form-group">
      <label for="image_url" class="col-sm-2 control-label">
        Image url
      </label>
      <div class="col-sm-10">
        <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control">
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <input type="submit" value="Add actor" class="btn btn-primary">
      </div>
    </div>
  </form>
