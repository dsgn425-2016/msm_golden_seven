<h1>Directors</h1>

<a href="/director/new_form">Add a Director</a>

<table>
  <tr>
    <th>Image</th>
    <th>DOB</th>
    <th>Name</th>
    <th>Bio</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.dob %>
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <%= truncate(director.bio) %>
    </td>
    <td>
      <a href="/directors/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="/directors/<%= director.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_director/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
