<h1>Directors</h1>

<div>
  <a href="/new_director_form"><input type=button value="Create New Director"></a>
</div>

<table>

    <tr>
      <th>Image</th>
      <th>Dob</th>
      <th>Name</th>
      <th>Bio</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @directors.each do |director| %>
      <tr>
        <td><img src="<%= director.image_url %>" width="80"></td>
        <td><%= director.dob %></td>
        <td><%= director.name %></td>
        <td><%= truncate(director.bio) %></td>
        <td><a href="http://localhost:3000/directors/<%= director.id %>">Details</a></td>
        <td><a href="http://localhost:3000/directors/<%= director.id %>/edit_form">Edit</a></td>
        <td><a href="http://localhost:3000/delete_director/<%= director.id %>">Delete</a></td>
      </tr>
    <% end %>
  </tbody>
</table>
