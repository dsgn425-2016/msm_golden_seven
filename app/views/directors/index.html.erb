<div class="page-header">
  <h1>Directors</h1>
</div>

<p>
  <a href="/directors/new_form">Add a New Director</a>
</p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Bio</th>
      <th>Date of birth</th>
    </tr>
  </thead>

  <tbody>
    <% @directors.each do |director| %>
    <tr>
      <td><img src="<%= director.image_url %>" width="80"></td>
      <td><%= director.name %></td>
      <td><%= truncate(director.bio) %></td>
      <td><%= director.dob %></td>
      <td>
        <a href="/directors/<%= director.id %>">Details</a>
      </td>
      <td>
        <a href="/directors/<%= director.id %>/edit_form">Edit</a>
      </td>
      <td>
        <a href="/delete_director/<%= director.id %>">Delete</a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
