<h1>Edit Movie #<%=  @d.id %></h1>
<form action="/update_movie/<%=  @d.id %>">
  <label for="title">Title</label>
  <input type = "text" name="new_title" id="title" placeholder="Title" value="<%=  @d.title  %>">

  <div><label for="year">Year</label>
    <input type = "text" name="new_year" id="year" placeholder="Year" value="<%=  @d.year  %>"></div>

    <div><label for="duration">Duration</label>
      <input type = "text" name="new_duration" id="duration" placeholder="Duration" value="<%=  @d.duration  %>"></div>

      <div><label for="description">Description</label>
        <textarea id="description" name="new_description" placeholder="Description" rows="3"> <%=  @d.description  %></textarea></div>

        <div><label for="image_url">Image url</label>
          <input type = "text" name="new_image_url" id="image_url" placeholder="Image url" value="<%=  @d.image_url  %>"></div>

          <button>Update Movie</button>
        </form>
