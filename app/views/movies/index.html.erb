<h1>Movies</h1>

<a href="/movies/new_form">Add a Movie</a>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Descrition</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td>
      <img src="<%= movie.image_url %>" width="80">
    </td>
    <td>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <%= movie.duration %>
    </td>
    <td>
      <%= truncate(movie.description) %>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>">Show</a>
    </td>
    <td>
      <a href="/movies/<%= movie.id %>/edit_form">Edit</a>
    </td>
    <td>
      <a href="/delete_movie/<%= movie.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
