<h1>Movies</h1>

    <a href="/movies/new_form">
    Add New Movie </a>
<table>

  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Duration</th>
    <th>Description</th>
  </tr>
  <% @movies.each do |movie| %>
  <tr>
    <td><img src="<%= movie.image_url %>" width="80"></td>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.duration %></td>
    <td><%= movie.description %></td>
      <td>      <a href="/movies/<%= movie.id %>">
      View</a>
    </td>
    <td>      <a href="/delete_movie/<%= movie.id %>">
      Delete</a>
    </td>
    <td>      <a href="/movies/<%= movie.id %>/edit_form">
      Modify</a>
    </td>

  </tr>
  <% end %>

</table>
