<h1>Movies</h1>

<div class="">
  <a href="/movies/new_form">ADD A NEW MOVIE</a>
</div>

<div class="">
  <table>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Duration</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @list_of_movies.each do |movie| %>
    <tr>
      <td>
        <img src="<%= movie.image_url %>" width="80">
      </td>
      <td>
        <%= movie.title %>
      </td>
      <td>
        <%= movie.year %>
      </td>
      <td>
        <%= movie.duration %>
      </td>
      <td>
        <%= movie.description %>
      </td>
      <td>
        <a href="/movies/<%= movie.id %>">Show</a>
      </td>
      <td>
        <a href="/movies/edit/<%= movie.id %>">Edit</a>
      </td>
      <td>
        <a href="/movies/delete_movie/<%= movie.id %>">Delete</a>
      </td>
    </tr>
    <% end %>
  </table>
</div>
