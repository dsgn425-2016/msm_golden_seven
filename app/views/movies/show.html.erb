<div class="page-header">
  <h1>Movie #<%= @movie.id %></h1>
</div>

<table border="black">
  <tr>
    <td>Title</td>
    <td><%= @movie.title %></td>
  </tr>
  <tr>
    <td>Year</td>
    <td><%= @movie.year %></td>
  </tr>
  <tr>
    <td>Duration</td>
    <td><%= @movie.duration %></td>
  </tr>
  <tr>
    <td>Description</td>
    <td><%= @movie.description %></td>
  </tr>
  <tr>
    <td>Image</td>
    <td><img src="<%= @movie.image_url %>" width="320"></td>
  </tr>
</table>
